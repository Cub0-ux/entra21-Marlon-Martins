7)
console.log("exercício 7")
let valores = [], maior, menor
function verificaValores() {
    for (let j = 0; j < 50; j++) {
        if (j === 0) {
            maior = valores[j]
            menor = valores[j]
        } else if (valores[j] > maior) {
            maior = valores[j]
        } else if (valores[j] < menor) {
            menor = valores[j]
        } else if (j > 48) {
            return maior, menor
        }
        
    }
}
for (let i = 0; i < 50; i++) {
        valores[i] = Math.floor(Math.random() * (1000 - 1) + 1)
    }
verificaValores(valores)
console.log(`O maior valor é: ${maior}\nO menor valor é: ${menor}`)

