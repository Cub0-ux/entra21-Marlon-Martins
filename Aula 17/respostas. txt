11)
console.log("exercício 11")
function ehPerfeito(numero){
    let perfeito = 0
    for (let i = 1; i <=numero-1; i++){
        if (numero%i==0){
            perfeito+=i
        }
    }
    if (perfeito == numero){
        return(true)
    }
}

let numero = +prompt("Digite um número ")
ehPerfeito(numero) ? console.log("é perfeito") : console.log("não é perfeito")

