function verificarMediaAluno(valorMedia) {
if(valorMedia <5 ){
    return "D"
}
else if(valorMedia <7 ){
    return "C"
}
else if(valorMedia <9 ){
    return "B"
}
else {
    return "A"
}
}

    let media = Number (prompt("Qual é a média?"))
console.log(`o conceito da sua média é ${verificarMediaAluno(media)}`)


